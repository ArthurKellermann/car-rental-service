generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_LOCAL")
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  created_at  DateTime @default(now())

  @@map("categories")
}

model Specification {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  created_at  DateTime @default(now())

  @@map("specifications")
}

model User {
  id             String   @id @default(uuid())
  name           String
  username       String   @unique
  password       String
  email          String   @unique
  driver_license String
  isAdmin        Boolean  @default(false)
  avatar         String?
  created_at     DateTime @default(now())

  @@map("users")
}
